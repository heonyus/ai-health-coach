{
  "name": "ai-health-coach",
  "version": "1.0.0",
  "description": "AI 기반 1:1 퍼스널 트레이너 애플리케이션",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend/api && npm run dev",
    "dev:frontend": "cd frontend/web && npm run dev",
    "dev:mobile": "cd frontend/mobile && npm run start",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend/api && npm run build",
    "build:frontend": "cd frontend/web && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend/api && npm run test",
    "test:frontend": "cd frontend/web && npm run test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend/api && npm run lint",
    "lint:frontend": "cd frontend/web && npm run lint"
  },
  "keywords": [
    "ai",
    "health",
    "fitness",
    "personal-trainer",
    "react-native",
    "machine-learning"
  ],
  "author": "Health Coach Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "frontend/web",
    "frontend/mobile",
    "backend/api",
    "backend/ai-engine"
  ]
}